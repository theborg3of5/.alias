# Git shortcuts.

# Check out.
alias gco='git clone'
alias gclo='git clone'

# Commits.
# alias gcom='git commit'
alias gcomm='git commit'
# Allows message on end without quotes.
gcom() {
	message="$@"
	git commit -m "$message"
}

# Add, commit, and push. Allows message on end without quotes.
gcomp() {
	message="$@"
	git add -A && git commit -m "$message" && git push && exit
}



# Push.
alias gpush='git push'
alias gci='git push'

# Pull/Update.
alias gup='git pull'
alias gpull='git pull'
# alias gupa='git pull *'
gupa() {
	currDir=$(pwd)
	# echo "$currDir"
	printf "\n=== Aliases ======================================\n"
	builtin cd ~/.alias
	git pull
	printf "\n=== AHK ==========================================\n"
	builtin cd /cygdrive/g/ahk
	git pull
	printf "\n=== Styles =======================================\n"
	builtin cd /cygdrive/g/Userstyles
	git pull
	printf "\n=== Scripts ======================================\n"
	builtin cd /cygdrive/g/Userscripts
	git pull
	printf "\n"
	builtin cd $currDir
}
alias gpulla="gupa"
alias gpua="gupa"

